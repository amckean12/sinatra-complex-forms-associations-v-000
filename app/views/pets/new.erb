<h1>Create a new Pet</h1>
<form action="/pets" method="POST">
  <label>Name:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name">
  <br></br>
  <label>Choose and existing Owner:</label>
  <br></br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="owner[name]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%>
  </input>
  <%end%>
  <br></br>

</form>
